<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_android_camera_api"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.rutvi.viser_app.AndroidCameraApi">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="2448dp"
        android:layout_height="3264dp"
        android:id="@+id/capturePhotoImageView"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/textview_result"
        android:gravity="center_horizontal"
        android:background="#33000000"
        android:text=""
        android:textSize="@dimen/font_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_takepicture"
        android:background="@drawable/camera"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textview_result"
        />
    <!--android:layout_width="109dp"
    android:layout_height="wrap_content"
    android:text="Capture"
    android:layout_marginBottom="16dp"
    -->


    <Button
        android:id="@+id/btn_getText"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:text="OCR"
        android:layout_alignBaseline="@+id/btn_takepicture"
        android:layout_alignBottom="@+id/btn_takepicture"
        android:layout_alignStart="@+id/textview_result"
        android:layout_marginStart="36dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:id="@+id/imageView2"
        app:srcCompat="@drawable/logo"
        android:background="@color/cast_expanded_controller_background_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

    </LinearLayout>


</RelativeLayout>